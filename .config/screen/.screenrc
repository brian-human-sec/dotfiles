defutf8 on
#utf8 on
startup_message off
term "screen-256color"

# Automatically detach on hangup.
autodetach on
vbell off

# Cache 30000 lines for scroll back
defscrollback 30000

shell -${SHELL}
#shell "/usr/bin/zsh"

altscreen on
termcapinfo xterm* ti@:te@:cl=\Ec

